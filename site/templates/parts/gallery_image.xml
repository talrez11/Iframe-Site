<document>

		<a
			data-desc="$params['description'][$language]"
			data-gallery="$params['id']"
			alt="$params['name'][$language]"
			href="$params['image']"
			style="'background-image: url('.gallery::getGroupThumbnailById($params['id'],null, 250, Thumbnail::CONSTRAIN_WIDTH).');'"
			cms:eval="data-gallery,style,href,alt,data-desc"
			>
			<h3><cms:var param="name" multilanguage="yes"/></h3>
			<p><cms:var param="description" multilanguage="yes"/></p>
		</a>

</document>