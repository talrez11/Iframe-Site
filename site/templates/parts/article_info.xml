<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<article class="$params['text_id']" cms:eval="class" >
		<h2><cms:var name="$params['title'][$language]"/></h2>
		<cms:markdown param="content" multilanguage="yes"/>
		<h3><cms:text constant="social"/></h3>
		<a href="https://www.facebook.com/HiframeUSA" class="social"><cms:raw file="../images/footer/facebook.svg"/></a>
		<a href="" class="social"><cms:raw file="../images/footer/google.svg"/></a>
		<a href="" class="social"><cms:raw file="../images/footer/linkedin.svg"/></a>
		<a href="https://twitter.com/HiframeUSA" class="social"><cms:raw file="../images/footer/twitter.svg"/></a>
		<a
			href="'tel:'.Language::getText('number')"
			class="phone"
			cms:eval="href"
			>
			<cms:text constant="number_link"/>
		</a>
	</article>
</document>