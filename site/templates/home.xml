<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">

			<cms:template file="parts/header.xml"/>

			<div class="home_gallery">

				<a href="javascript:void(0)" class="btnNext"></a>
				<a href="javascript:void(0)" class="btnPrevious"></a>

				<div class="gallery_wrap">
					<cms:desktop>
						<cms:module
							name="gallery"
							action="show_image_list"
							group="home_page_gallery"
							template="parts/home_page_gallery_image.xml"
							/>

					</cms:desktop>

					<cms:mobile>
						<cms:module
							name="gallery"
							action="show_image"
							group="home_page_gallery"
							text_id="mobile_image"
							template="parts/home_page_gallery_image.xml"
							limit="1"
							/>

					</cms:mobile>




				</div>

				<!-- <div class="btnControls">
					<a href=""></a>
					<a href=""></a>
					<a href=""></a>
					<a href=""></a>
				</div> -->
				<cms:desktop>
					<div class="header_form">
						<span><cms:text constant="form_desc"/></span>
						<cms:module
							name="contact_form"
							action="show"
							text_id="contact_form"
							/>
					</div>
				</cms:desktop>
			</div>

			<cms:mobile>
				<div class="header_form">
					<span><cms:text constant="form_desc"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</cms:mobile>

			<div class="features">
				<h2></h2>
				<cms:module
					name="gallery"
					action="show_image_list"
					group="features"
					template="parts/features.xml"
					/>
			</div>

			<div class="links">
				<h2><cms:text constant="media_links"/></h2>
				<cms:module
					name="links"
					action="show_link_list"
					template="parts/links_template.xml"
					/>
			</div>

			<cms:template file="parts/footer.xml"/>

		</body>

	</html>
</document>
